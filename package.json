  "version": "0.0.2",
  "dependencies": {
    "mariadb": "latest",
    "node-gyp": "latest",
    "unrar": "latest"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "production": "node main.js prod",
    "update": "bash ./scripts/update.sh",

    "testall": "node ./testrun.js test",
    "servertest": "node ./tests/servertest.js test",
    "dbtest": "node ./tests/dbtest.js test",
    "parsertest": "node ./tests/parsertest.js test",
    "methodstest": "node ./tests/methodstest.js test",
    "testwrapper": "node ./tests/testwrapper.js test",

    "chartparser": "node ./modules/chartparser.js chart ./cfg/jobfile.json"
  },
  "repository": {
    "type": "git",
